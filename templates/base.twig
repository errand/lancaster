{% apply spaceless %}
{% block html_head_container %}

	{% include 'html-header.twig' %}
	{% block head %}{% endblock %}
</head>{% endblock %}<body class="{{body_class}}" data-template="base.twig">
<header class="header site__header">
	{% block header %}
		<div class="site-menu">
			<button class="icon-button icon-menu">
				<span class="hamburger">
					<em>Open</em>
				</span>
				<span class="menu-label">Меню</span>
			</button>

			<picture class="icon_age18">
				<source srcset="{{ theme.link }}/static/img/icon_age18.svg" type="image/svg+xml">
				<img src="{{ theme.link }}/static/img/icon_age18.png" alt="{{ site.name }}" width="24" height="24">
			</picture>
		</div>

		<div class="site-logo__wrapper">
			<div class="site-logo">
				<div class="site-logo__slogan_wrapper">
					<div class="site-logo__site_name">Интернет-газета</div>
					<div class="site-logo__slogan">Народ. Общество. Власть</div>
				</div>
				<a href="/" title="{{ site.name }}">
					<picture class="site-logo__picture">
						<source media="(max-width: 640px)" srcset="{{ theme.link }}/static/img/mobile_logo.png">
						<source media="(min-width: 641px)" srcset="{{ theme.link }}/static/img/logo.png">
						<img class="site-logo__img" src="{{ theme.link }}/static/img/logo.png" alt="{{ site.name }}" width="408" height="85">
					</picture>
				</a>
			</div>
		</div>
		<div class="search-block">
			<a href="/podpisatsya-na-novosti/" class="subscribtion-block">
				<div class="subscribtion-block__inner">
					<picture class="icon">
						<source srcset="{{ theme.link }}/static/img/icon_mail.svg" type="image/svg+xml">
						<img src="{{ theme.link }}/static/img/icon_mail.png" alt="Подписка" width="18" height="13">
					</picture>
					Подписка
				</div>
			</a>
			{% include 'partial/social-icons.twig' %}
			{% include 'partial/searchform.twig' %}
		</div>
	{% endblock %}
</header>

{% include 'partial/main-menu.twig' %}

<main
	id="content" class="content-wrapper">

	{#
	      # Берём content-wrapper__inner как отсечку для шапки и рекламы, которые позиционированы абсолютно
	      #}

	<div class="content-wrapper__inner {{sidebar_class}}">
		<div class="row content-wrapper__inner-row g-0">
			<div class="main col-12 col-md-9">
				<div class="main__wrapper">
					{% block title %}
						{% if title %}
							<h1 class="page-title">{{title}}</h1>
						{% endif %}
					{% endblock %}
					{% block content %}
						Sorry, no content
					{% endblock %}
				</div>
			</div>
			<aside class="sidebar col-12 col-md-3">
				{% if above_sidebar %}
					<div class="widgets above_sidebar">
						
					</div>
				{% endif %}
				<div class="news-timeline">
					{% include 'partial/news-right-column-listing.twig' %}
				</div>
				{% if sidebar %}
					<div class="sidebar-widgets">
						{% include 'sidebar.twig' %}
					</div>
				{% endif %}
			</aside>
		</div>
	</div>

</main>

{% block footer %}
	<footer id="footer" class="main-footer">
		{% include 'footer.twig' %}
	</footer>
	{{ function('wp_footer') }}
{% endblock %}</body></html>{% endapply %}
