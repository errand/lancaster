{% if featured %}
<div class="post-widget">
  {% for post in featured %}
<div class="post">

  <h3 class="title">
    <a href="{{post.link}}" class="post-link">
      {{ post.title }}
    </a>
  </h3>
</div>
  {% endfor %}
</div>
{% endif %}
