{% if firtsPostOnHomePage %}
  {% for post in firtsPostOnHomePage %}
    <div class="hero-block tease row">
      <article class="col-12 col-lg-8">
        <div class="hero-block__inner">
          <a href="{{ post.link }}" title="{{ post.title }}">
          <picture class="hero-block__picture">
            <source srcset="{{ fn('dummy_image_url', post.ID)|resize(355,200, 'top')|towebp }}" type="image/webp" media="(max-width: 640px)">
            <source srcset="{{ fn('dummy_image_url', post.ID)|resize(355,200, 'top')|tojpg }}" media="(max-width: 640px)">
            <source srcset="{{ fn('dummy_image_url', post.ID)|resize(896,400, 'top')|towebp }}" type="image/webp" media="(min-width: 641px)">
            <img src="/wp-content/uploads/2021/06/no-noimage.jpg" width="355" height="200"
                 alt="{% if post.thumbnail.alt %}{{ post.thumbnail.alt }}{% else %}{{ post.title }}{% endif %}"
                 loading="lazy" data-src="{{ fn('dummy_image_url', post.ID)|resize(896,400, 'top')|tojpg }}"
            />
          </picture>
          </a>
          <div class="hero-block__text">
            <div class="hero-block__category">
              <a href="{{ post.terms[0].link }}">{{ post.category }}</a>
            </div>
            <h1 class="hero-block__title">
              <a href="{{ post.link }}" title="{{ post.title }}">{{ post.title }}</a>
            </h1>
            <div class="read-more">
              <a href="{{ post.link }}">Читать далее</a>
            </div>
          </div>
        </div>
      </article>
      <div class="ads col-12 col-lg-4">{{ frontStickyPostsWidget }}</div>
    </div>
  {% endfor %}
{% endif %}

{% if pinToHomePage %}
  <div class="article-block block-vertical tease row">
    {% for post in pinToHomePage %}
      <article class="article-block__inner col-12 col-lg-4">
        <a href="{{ post.link }}" title="{{ post.title }}">
        <picture class="article-block__picture">
          <source srcset="{{ fn('dummy_image_url', post.ID)|resize(355,200, 'top')|towebp }}" type="image/webp" media="(max-width: 640px)">
          <source srcset="{{ fn('dummy_image_url', post.ID)|resize(355,200, 'top')|tojpg }}" media="(max-width: 640px)">
          <source srcset="{{ fn('dummy_image_url', post.ID)|resize(454,255, 'top')|towebp }}" type="image/webp" media="(min-width: 641px)">
          <img src="/wp-content/uploads/2021/06/no-noimage-454x242-c-default.jpg" width="454" height="255"
               alt="{% if post.thumbnail.alt %}{{ post.thumbnail.alt }}{% else %}{{ post.title }}{% endif %}"
               loading="lazy" data-src="{{ fn('dummy_image_url', post.ID)|resize(454,255, 'top')|tojpg }}"
          />
        </picture>
        </a>
        <h2 class="article-block__title">
          <a href="{{ post.link }}" title="{{ post.title }}">{{ post.title }}</a>
        </h2>
        <time class="article-block__date date" datetime="{{ post.post_date | date( 'Y-m-d H:i' ) }}">
          {{ post.post_date | date( 'd.m.Y H:i' ) }}
        </time>
        <div class="article-block__preview">{{ post.preview.length(21).read_more( '' ).force }}</div>
        <div class="read-more">
          <a href="{{ post.link }}">Читать далее</a>
        </div>
      </article>
    {% endfor %}
  </div>
{% endif %}